<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true"
    tools:context=".sellPage"
    tools:showIn="@layout/sell_bar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/opponent_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoCorrect"
            android:ems="15"
            android:hint="Opponent team"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/game_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/sport_prompt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/game_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="15"
            android:hint="Game date"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="8"
            android:hint="Game time"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/game_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoCorrect"
            android:ems="15"
            android:hint="Game location"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/game_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="8"
            android:hint="Price"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/sell_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sell"
            android:background="@color/darkRed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>